{
  "name": "stimulus-remote-rails",
  "version": "3.0.1",
  "description": "A Stimulus controller to handle Rails UJS events.",
  "keywords": [
    "stimulus",
    "stimulusjs",
    "stimulus controller",
    "rails ujs",
    "rails remote"
  ],
  "repository": "git@github.com:stimulus-components/stimulus-remote-rails.git",
  "bugs": {
    "url": "https://github.com/stimulus-components/stimulus-remote-rails/issues"
  },
  "author": "Guillaume Briday <guillaumebriday@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/stimulus-components/stimulus-remote-rails",
  "private": false,
  "main": "dist/stimulus-remote-rails.umd.js",
  "module": "dist/stimulus-remote-rails.es.js",
  "scripts": {
    "format": "prettier-standard  '**/*.{ts,css,html}' --format",
    "lint": "prettier-standard  '**/*.{ts,css,html}' --lint",
    "dev": "vite",
    "prod": "vite build --mode netlify",
    "build": "tsc --noEmit && vite build",
    "version": "yarn build",
    "np": "np --no-2fa --no-test"
  },
  "devDependencies": {
    "@babel/core": "7.12.3",
    "@babel/plugin-syntax-class-properties": "7.12.1",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-typescript": "^7.13.0",
    "@rails/ujs": "^6.0.3-4",
    "np": "^7.5.0",
    "prettier-standard": "16.4.1",
    "stimulus": "^2.0.0",
    "typescript": "^4.2.4",
    "vite": "^2.3.3"
  },
  "peerDependencies": {
    "@rails/ujs": "^6.0.3-4",
    "stimulus": "^2.0.0"
  }
}
