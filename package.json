    "@babel/preset-typescript": "^7.18.6",
    "@hotwired/stimulus": "^3.2.1",
    "@rails/ujs": "^7.0.4",
    "autoprefixer": "^10.4.13",
    "np": "^7.6.2",
    "postcss": "^8.4.20",
    "prettier-standard": "16.4.1",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.4",
    "vite": "^4.0.3"
  },
  "peerDependencies": {
    "@hotwired/stimulus": "^3.2.1"
  }
